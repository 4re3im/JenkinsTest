<?xml version="1.0"?>
<schema version="0.3">
	<table name="CupCompetitionEvent">
		<field name="id" type="I" size="10">
			<KEY/>
			<AUTOINCREMENT/>
			<UNSIGNED/>
		</field>
		<field name="name" type="C" size="128">
			<UNIQUE/>
		</field>
		<field name="category" type="C" size="64"/>	<!-- HSC/VCE -->
		<field name="type" type="C" size="64"/>	<!-- photo / q&a -->
		<field name="form_config" type="text"/>
		<field name="qa_question" type="text"/>
		<field name="start_time" type="T"/>
		<field name="end_time" type="T"/>
		<field name="max_submission" type="I" size="10"/>
		<field name="homepage_content" type="text"/>
		<field name="terms_and_conditions_content" type="text"/>
		<field name="config" type="text"/>
		<field name="modifiedAt" type="T"/>
		<field name="createdAt" type="T"/>
	</table>
	
	<table name="CupCompetitionEventEntry">
		<field name="id" type="I" size="10">
			<KEY/>
			<AUTOINCREMENT/>
			<UNSIGNED/>
		</field>
		<field name="eventID" type="I" size="10"/>
		<field name="email" type="C" size="256"/>
		<field name="first_name" type="C" size="256"/>
		<field name="last_name" type="C" size="256"/>
		<field name="question_data" type="text"/>
		<field name="image_filename" type="C" size="256"/>
		<field name="image_meta" type="C" size="256"/>
		<field name="image_caption" type="C" size="256"/>
		<field name="image_description" type="C" size="512"/>
		<field name="qa_question" type="C" size="512"/>
		<field name="qa_answer" type="text"/>
		<field name="status" type="C" size="64"/>	<!-- pending  approved  rejected --> 
		<field name="note" type="text"/>
		<field name="modifiedAt" type="T"/>
		<field name="createdAt" type="T"/>
	</table>
</schema>